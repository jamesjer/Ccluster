INCLUDE_PATH = $(INCS) -I../../src
LIBRARY_PATH = -L../.. $(LIBS)
LIBRARY_FLAG = -lflint -larb -lccluster -lm

QUIET_CC  = @echo '   ' CC  ' ' $@;

TEST=$(foreach x, ., $(wildcard $(x)/*.c))
TEST_OBJS=$(TEST:%.c=%.o)
TEST_EXECS=$(TEST:%.c=%)

build: ccluster_issac20\
       ccluster_issac20_runnels\
       ccluster_issac20_mandelbrot

test: build
	../genPolFile Runnels 1 7 ../Runnels_7.ccl
	../ccluster ../Runnels_7.ccl -o 0
	./ccluster_issac20 ../Runnels_7.ccl -o 0
	./ccluster_issac20_runnels 7 -o 0

#==================================================
# HOUSEKEEPING 
#==================================================

clean :
	rm -rf $(TEST_OBJS) $(TEST_EXECS)

.c.o :
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) -o $@ -c $< $(INCLUDE_PATH)
	    	
ccluster_issac20: ccluster_issac20.o ../parseArgs.h
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) \
	    	-o $@ $< $(INCLUDE_PATH) \
	    	$(LIBRARY_PATH) $(LIBRARY_FLAG) \
	    	
ccluster_issac20_runnels: ccluster_issac20_runnels.o ../parseArgs.h
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) \
	    	-o $@ $< $(INCLUDE_PATH) \
	    	$(LIBRARY_PATH) $(LIBRARY_FLAG) \
	    	
ccluster_issac20_mandelbrot: ccluster_issac20_mandelbrot.o ../parseArgs.h
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) \
	    	-o $@ $< $(INCLUDE_PATH) \
	    	$(LIBRARY_PATH) $(LIBRARY_FLAG) \
