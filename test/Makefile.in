
INCLUDE_PATH = $(INCS) -I../src
LIBRARY_PATH = -L.. $(LIBS)
LIBRARY_FLAG = -lflint -larb -lccluster -lm

QUIET_CC  = @echo '   ' CC  ' ' $@;

TEST=$(foreach x, ., $(wildcard $(x)/*.c))
TEST_OBJS=$(TEST:%.c=%.o)
TEST_EXECS=$(TEST:%.c=%)

#==================================================
# COMPILING 
#==================================================
build: mignotte mignotteMul \
    bernoulli wilkinson \
    wilkRat spiral \
    cluster wilkMul \
    mandelbrot laguerre\

#==================================================
# HOUSEKEEPING 
#==================================================
print: 
	@echo $(BENCH_DIRS_FILES)

clean :
	rm -rf $(TEST_OBJS) $(TEST_EXECS)

.c.o :
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) -o $@ -c $< $(INCLUDE_PATH)
	
mignotte: mignotte.o
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) \
	    	-o $@ $< $(INCLUDE_PATH) \
	    	$(LIBRARY_PATH) $(LIBRARY_FLAG) \
	
debug: mignotte.o
# 	@echo "Building $@"
	$(QUIET_CC) $(CC) $(CFLAGS) \
	    	$(LIBRARY_PATH) $(LIBRARY_FLAG) \
	    	-o $@ $< $(INCLUDE_PATH) \
	
